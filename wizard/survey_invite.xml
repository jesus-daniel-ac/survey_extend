<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_survey_invite_form_inherit_psychologist" model="ir.ui.view">
        <field name="name">survey.invite.form.inherit.psychologist</field>
        <field name="model">survey.invite</field>
        <field name="inherit_id" ref="survey.survey_invite_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="before">
                <field name="psychologist_user_id"
                       invisible="survey_id.is_psychologist_survey == False"
                       required="survey_id.is_psychologist_survey == True" options="{'no_create': True, 'no_edit': True}"/>

                <field name="company_id"
                       invisible="survey_id.is_psychologist_survey == False"
                       required="survey_id.is_psychologist_survey == True"  options="{'no_create': True, 'no_edit': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
